{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "module": "node16",
    "moduleResolution": "node16",
    "jsx": "react-native",
    "types": [
      "expo-router"
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "app/*": [
        "./Breath_Pacer/app/*"
      ]
    }
  },
  "include": [
    "expo-env.d.ts",
    "app",
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts"
  ]
}
